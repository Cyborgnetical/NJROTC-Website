<style>
    body * {
    margin: 0;
    padding: 0;
}

/* Default styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

section {
    margin-bottom: 20px;
}

/* Styles for smaller screens */
@media only screen and (max-width: 600px) {
    .container {
        padding: 10px;
    }

    section {
        margin-bottom: 10px;
    }
}

#title {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-position: center;
    background-repeat: no-repeat, repeat;
    background-size: cover;
    height:300px;
}

#title h1 {
    font-family: 'Josefin sans';
    font-size: 36px; /* responsive font size */
    padding-block: 2vh; /* responsive padding */
    color: whitesmoke;
    text-decoration: underline;

    /* Media Query for smaller screens */
    @media (max-width: 768px) {
        font-size: 24px;
        padding-block: 1vh;
    }
}

#title p {
    width: 90vw;
    background-color: navy;
    color: white;
    text-align: center;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    box-sizing: border-box;
    padding-inline: 5vw;
    padding-block: 2vh;

    /* Media Query for smaller screens */
    @media (max-width: 768px) {
        font-size: 10px;
        padding-inline: 2vw;
        padding-block: 1vh;
    }
}

#extraStuff {
    width: 100vw;
    background-color: azure;
    text-align: center;

    /* Media Query for smaller screens */
    @media (max-width: 768px) {
        font-size: 10px;
    }
}

#subjects {
    width: 100vw;
    display: flex;
    justify-content: center;
    text-align: center;
    font-family: 'Josefin sans';
    padding-block: 2vh;
    background-color: azure;
    height: auto;
}
    .subject h2 {
    border: solid 3px black;
    border-left: none;
    border-top: none;
    border-right: none;
    }

.subject {
    flex-grow: 1;
    flex-shrink: 1;
    flex-basis: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    row-gap: 2vh;
    transition: 250ms;

}

.subject a {
    background-color: #000000;
    color: #ffffff;
    padding: 2vh;
    border-radius: 1vmin;
    transition: background-color 250ms;
    min-width: 40px;
    margin: 0 auto;
    padding: 20px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    }


.subject hr {
    width: 80%;
}
.subject h2{
    color:black;
}
.subject a:hover {
    background-color: #535454;
}

ul {
    display: flex;
    flex-direction: column;
    row-gap: 3vh;
    text-align: left;
}
</style>