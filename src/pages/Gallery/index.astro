---
import Top from "../../components/Sections/Top.astro";
import Layout from "../../layouts/GlobalHTMLLayout.astro";
import ControlBar from "../../components/ControlBar/ControlBar.svelte";
// import data from '../../data/gallery.json' // Uncomment if you plan to use this data
---

<Layout name="Gallery Home">
    <Top image="https://raw.githubusercontent.com/Parlier-NJROTC/Gallery/main/teaching.jpeg">
        <h1><u>Photo Gallery</u></h1>
        <div style="background-color: navy; padding-inline: 5vw; padding-block:10px;">
            Welcome to the Gallery, our massive picture collection. Here is where our pictures are stored.
        </div>
    </Top>
    <div class="eyehurts"/>
    <h1 style="color: black;">Instructions</h1>
    <ul style="color: black;">
        <li>
            <div class="container" style="display: flex; align-items: left;">
                <button class="btn" onclick="displayRoutine()">How do I Send NJROTC Photos?</button>
                </li>
                <div class="Gif">
                    <img src="https://raw.githubusercontent.com/Parlier-NJROTC/Assets/main/Other/Help.gif">
                </div>
            </div>
        <li style="color: black; padding-left: 6px;">Navigate through pages to see different images</li>
        <li style="color: black; padding-left: 6px;">Click that Page list And Press Your Arrows Buttons to Scroll the Page List</li>
        <img src="https://raw.githubusercontent.com/Parlier-NJROTC/Assets/main/Other/Preview.gif">
    </ul>
    <ControlBar></ControlBar>
</Layout>

<style>  
    li{
        color: #000;
        font-size: 18px;
        
    }
    .eyehurts{
        overflow-y: hidden;
        width: 100%;
        height: 130%;
        z-index: -1;
        position: absolute;
        
        background-color: white;
    }
  .container{
      justify-content: flex-start; 
      cursor: help;
      
    }
  .btn{
      position: relative;
      left: 0px;
      color:rgb(0, 0, 255);
      font-size: 18px;
      background: none;
      border: none;
      cursor: help;
    }
  .Gif {
      display: none;
    }
</style>

<script lang="JS">
    function displayRoutine() {
      const gifElement = document.querySelector('.Gif');
      gifElement.style.display = 'block';
    }
</script>
