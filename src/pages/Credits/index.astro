    import Layout from "../../layouts/GlobalHTMLLayout.astro";
    import Top from "../../components/Sections/Top.astro";
---
<Layout name="Credits">
    <Top image="/Gallery/teaching.jpeg">
        <h1>Website Credit</h1>
        <p>Welcome to the Wedsite Credit page! Here, you'll see the Wedsite Credits</p>
    </Top>
      <div id="subjects">
        <div class="subject">
            <h2 style=" color: black;">Credits</h2>
                <hr>
        </div>
    </div> 
      <!--Names-->
      <p>
        <div style="text-align:center">
          <div class="subject">
      <a id="Ibarra" >Cadet Ibarra - First Programer</a><br> 
      <a id="Sanchez">Cadet Sanchez - Second Programer</a><br>
      <a id="Pena">Cadet Pena - Thrid Programmer</a>
      <a id="Hernandez">Cadent Hernandez - Thanks for the color pallette insparation</a><br>
      <a id="Espinosa">Cadent Espinosa - Thanks for making the blookets</a>
        </div>
    </p>
</Layout>


<script>
    let ibarraClicks = 0;
    let sanchezClicks = 0;
    
    document.getElementById('Ibarra').addEventListener('click', function() {
      ibarraClicks++;
      if (ibarraClicks === 2 && sanchezClicks === 2) {
        window.location.href = '/Credits/secit/';
      }
    });
    
    document.getElementById('Sanchez').addEventListener('click', function() {
      sanchezClicks++;
      if (ibarraClicks === 2 && sanchezClicks === 2) {
        window.location.href = '/Credits/secit/';
      }
    });
    </script>

<style>

body {
    margin: 0;
}

#title {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-position: center;
    background-repeat: no-repeat, repeat;
    background-size: cover;
    height:300px;
}

#title h1 {
    font-family: 'Josefin sans';
    font-size: 36px; 
    padding-block: 10px;
    color: whitesmoke;
    text-decoration: underline;

}

#title p {
    width: 90vw;
    background-color: navy;
    color: white;
    text-align: center;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    box-sizing: border-box;
    padding-inline: 5vw;
    padding-block: 2vh;
}

#extraStuff {
    width: 100vw;
    background-color: azure;
    text-align: center;
}

#subjects {
    width: 100vw;
    display: flex;
    justify-content: center;
    text-align: center;
    font-family: 'Josefin sans';
