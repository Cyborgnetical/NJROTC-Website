---
import Layout from "../../layouts/GlobalHTMLLayout.astro"
---


<Layout name="Instructor">
    <div id="title">
        <hr style="border-color: gold;">
        <h1>Naval Science Instructor</h1>
        <p>Whom taught us everything</p>
        <hr style="border-color: navy;">
    </div>
    <div id="profile">
        <h1 id="name">
            Cheif Killian
            <hr>
        </h1>
        <img id="cheif"src="https://raw.githubusercontent.com/Parlier-NJROTC/Gallery/main/Chief_Smile.jpg">
        <p id="sub">Cheif killian taking a picture near the trophies</p>
       <p id="description">Cheif killian has been our Naval Science Instructor for 5 years. She has served 20 years in the navy. She taught us all the tricks and tips she knows. Shes so good she made the class self sufficent for a while.</p>
    </div>
</Layout>

<style>
body * {
    margin: 0;
    padding: 0;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    color: black;
}

#title{
    width: 100vw;
    display: grid;
    box-sizing: border-box;
    padding-inline: 5vw;
    background-color: whitesmoke;
    color: black;
}
#title hr{
    margin: 25px;
    border-width: 5px;
    border: solid;
}

#title p{
    margin-left: 5vw;
    font-family: 'Josefin sans';
}
#title h1{
    margin-left: 5vw;
    font-family: 'Josefin sans';
}


#profile {
    display: grid;
    width: 100vw;
    grid-template-columns: 1fr 2fr 5fr 1fr;
    grid-template-rows: 100px 1fr 100px;
    grid-template-areas: 
    "emty1 namee emty2 emty3"
    "emty1 pictu descp emty3"
    "emty1 subt emty4 emty4"
    ;
    background-color: navajowhite;
}

#name{
    grid-area: namee;
    font-family: 'Josefin sans';
    justify-self: start;
    align-self: center;
    width: 90%;
    
}
#cheif{
    height: 400px;
    border: solid;
    grid-area: pictu;
}
#description{
    grid-area: descp;
    margin-left: 5%;
    font-size: 24px;
}
#sub{
    grid-area: subt;
}
</style>