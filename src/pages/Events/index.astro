---
    import Layout from "../../layouts/GlobalHTMLLayout.astro";
---
<Layout name="Events">
    <div id="tabs">
        <a href="/Events/Calendar">
            <h1>Calendar</h1>
            <p>Up coming events and information</p>
        </a>
        <a href="/Events/Fundraising">
            <h1>Fundraising</h1>
            
            <p>Ways to support the unit</p>
        </a>

    </div>
</Layout>

<style>
    #tabs{
        display: grid;

        grid-template-columns: 1fr 1fr;
        column-gap: 25px;
        justify-items: center;
        align-items: center;
        text-align: center;

        box-sizing: border-box;
        padding: 25px;
        height: calc(100vh - 135px);
    }
    #tabs *{
        color: black;
    }

    #tabs a{
        position: relative;
        width: 100%;

        border: 2px inset grey;
        border-radius: 5px;
        height: calc(85vh - 135px);
        box-shadow: 0px 0px 5px 2px grey;
        text-decoration: none;

        transition: 250ms;
    }
    #tabs a:hover{
        width: 105%;
        height: calc(90vh - 135px);
        background-color: aliceblue;
        
    }
    img{
        height: 20vh;
    }
    
</style>