---
    import Dropdown from "./dropdown.astro"
    import Link from "./link.astro"
---


<input type="checkbox" id="box">
<nav id="menus">
    <header>
        <h2>Menus</h2>
        <label for="box" id="close"> X <!-- this is the close button charater, DON'T DELETE --></label>
    </header>
    <nav id="navi">
        <Link title="Home" link=""/>
        <Dropdown title="Cadet Resources" link="Resources" id="SideMenus-Dropdown1"> 
        </Dropdown>
        <Dropdown title="Teams" id="SideMenus-Dropdown2">
        </Dropdown>
        <Link title="Instructor" />
        <Dropdown title="events" id="SideMenus-Dropdown3">
        </Dropdown>
        <Link title="Gallery" />
        <Dropdown title="links" id="SideMenus-Dropdown4">
            <a href="https://phs.parlierunified.org/">Palier High School</a>
            <a>Parlier Unified School District</a>
            <a>Midway Foundation</a>
            <a>Instagram</a>
            <a>Github</a>
            <a>Discord</a>
            <a>Credits</a>
        </Dropdown>
    </nav>
</nav>
<style>
    #menus{
        position: fixed;
        overflow-x: hidden;
        overflow-y: scroll;
        background-color: navy;
        top:0px;
        right: 0px;
    }
    #box{
        display: none;
    }
    header{
        background-color: darkblue;
        height: 130px;
        color:white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    header h2, header label{
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-weight: normal;
        font-size: 30px;
        margin-inline:35px;
    }

    #navi{
        display: grid;
        position: relative;
        height: calc(100vh - 130px);
    }
    #navi > span > a{
        display: inline-block;

        position: relative;

        display: flex;
        align-items: center;
        justify-content: right;

        margin: 0px;
        padding-right: 25px;

        
        height: 100%;

        color: white;
    }
    #navi > span{
        padding: 0px;
    }
    #navi > span > div{
        display: none;
        position: absolute;
    }
    #close{
        font-weight: normal;
    }

    @media (orientation: portrait) {
        #menus{
            width: 100vw;
            max-height: 0vh;
            transition: max-height 250ms;
        }
        #box:checked ~ #menus{
            max-height: 100vh;
            height: 100vh;
            transition: max-height 250ms;
        }
    }
    @media (orientation: landscape){
        #menus{
            max-width: 0px;
            width: 300px;
            height: 100vh;
            transition: max-width 200ms;
        }
        #box:checked ~ #menus{
            max-width: 300px;
            width:300px;
            transition: max-width 250ms;
        }
        

    }
</style>