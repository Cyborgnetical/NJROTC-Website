---
import Dropdown from "./Dropdown.astro";
import Link from "./Link.astro";
import Mode from "./Mode.astro";
---
<div class="NoDark">
<input type="checkbox" id="box" />
<nav id="menus">
    <header>
        <h2>Menus</h2>
        <label for="box" id="close">
            X <!-- this is the close button charater, DON'T DELETE --></label>
    </header>
    <nav id="navi">
        <Link title="Home" link="" />
        <Dropdown title="Cadet Resources" link="Resources" id="SideMenus-Dropdown1">
            <a href="/Resources/Tutorials"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">Tutorials</a>
            <a href="/Resources/Knowledge"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">Knowledge</a>
            <a href="/Resources/Extra"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">Extra</a>
            <a href="/Resources/Tool"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">Tools</a>
            <a href="/Resources/PDFs"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">PDFs</a>
        </Dropdown>
        <Link title="Teams" />
        <Link title="Instructor" />
        <Dropdown title="Events" id="SideMenus-Dropdown-2">
            <a href="/Events/Calendar"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">Calendar</a>
            <a href="/Events/Fundraising"
                style="font-size:20px;border-right: 4px solid white;padding-bottom: 10px;">Fundraising</a>
        </Dropdown>
        <Link title="Gallery" />
        <Link title="Links" />
        <Link title="Credits" />
        <Mode></Mode>
    </nav>
</nav>
</div>

</html>
<style>
    #menus {
        position: fixed;
        overflow-x: hidden;
        overflow-y: scroll;
        background-color: navy;
        top: 0px;
        right: 0px;
        border-left: 1px solid white;
        z-index: 99;

        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
        
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
    }

    #box {
        display: none;
    }

    header {
        background-color: darkblue;
        height: 130px;
        color: white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    header h2,
    header label {
        font-family: "Gill Sans", "Gill Sans MT", Calibri, "Trebuchet MS",
            sans-serif;
        font-weight: normal;
        font-size: 30px;
        margin-inline: 35px;
    }

    /** I swear if its two lines to fix I am going to obliterate my self */
    #navi {
        position: relative;
        overflow-y: scroll;

        height: calc(100vh - 130px);

        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
        -ms-overflow-style: none;  /* IE and Edge */
        scrollbar-width: none;  /* Firefox */
    }

    a {
        text-decoration: none;
        display: flex;
        justify-content: right;
        align-items: center;
        padding-right: 20px;
        color: white;
        text-align: right;
        overflow: hidden;
        grid-row: 1 / -1;
    }

    a:visited {
        color: white;
    }

    @media (orientation: portrait) {
        #menus {
            width: 100vw;
            max-height: 0vh;
            transition: max-height 250ms;
        }

        #box:checked~#menus {
            max-height: 100vh;
            height: 100vh;
            transition: max-height 250ms;
        }
    }

    @media (orientation: landscape) {
        #menus {
            max-width: 0px;
            width: 300px;
            height: 100vh;
            transition: max-width 200ms;
        }

        #box:checked~#menus {
            max-width: 300px;
            width: 300px;
            transition: max-width 250ms;
        }
    }
</style>