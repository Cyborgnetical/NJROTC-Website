---
    import Dropdown from "./dropdown.astro"
    import Link from "./link.astro"
---


<input type="checkbox" id="box">
<nav id="menus">
    <header>
        <h2>Menus</h2>
        <label for="box" id="close"> X <!-- this is the close button charater, DON'T DELETE --></label>
    </header>
    <nav id="navi">
        <Link title="Home" link=""/>
        <Dropdown title="Cadet Resources" link="Resources" id="SideMenus-Dropdown1">
            <a href="/Resources/Tutorials">Tutorials</a> 
            <a href="/Resources/Knowledge">Knowledge</a>
            <a href="/Resources/Ribbon Builder">Ribbon Builder</a>
        </Dropdown>
        <Link title="Teams">
        </Link>
        <Link title="Instructor" />
        <Dropdown title="Events" id="SideMenus-Dropdown-2">
            <a href="/Events/Calendar">Calendar</a>
            <a href="/Events/Fundraising">Fundraising</a>
        </Dropdown>
        <Link title="Gallery" />
        <Link title="Links">
        </Link>
        <Link title="Credits">
        </Link>
    </nav>
</nav>
<style>
    #menus{
        position: fixed;
        overflow-x: hidden;
        overflow-y: scroll;
        background-color: navy;
        top:0px;
        right: 0px;
        border-left: 1px solid white;
        z-index: 99;
    }
    #box{
        display: none;
    }
    header{
        background-color: darkblue;
        height: 130px;
        color:white;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    header h2, header label{
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-weight: normal;
        font-size: 30px;
        margin-inline:35px;
    }
    /** I swear if its two lines to fix I am going to obliterate my self */
    #navi{
        
        position: relative;
        overflow-y: scroll;
        
        height: calc(100vh - 130px);
    }
    a{
        display: flex;
        justify-content: right;
        align-items: center;
        padding-right: 60px;
        text-align: right;
        overflow: hidden;
        grid-row: 1 / -1;
    }


    @media (orientation: portrait) {
        #menus{
            width: 100vw;
            max-height: 0vh;
            transition: max-height 250ms;
        }
        #box:checked ~ #menus{
            max-height: 100vh;
            height: 100vh;
            transition: max-height 250ms;
        }
    }
    @media (orientation: landscape){
        #menus{
            max-width: 0px;
            width: 300px;
            height: 100vh;
            transition: max-width 200ms;
        }
        #box:checked ~ #menus{
            max-width: 300px;
            width:300px;
            transition: max-width 250ms;
        }
        

    }
</style>