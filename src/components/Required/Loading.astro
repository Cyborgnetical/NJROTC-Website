<style >
    html{
        overflow-y: hidden;
    }
        .spinner-container {
            left: 0;
            top: 0;
            display: flex;
            position: fixed;
            justify-content: center;
            align-items: center;
            height: 100%;
            width:100%;
            background-color:white;
            z-index: 99999999999999999999;
            cursor: wait;

            -webkit-user-select: none; 
            -moz-user-select: none; 
            -ms-user-select: none; 
            user-select: none; 
        }

        .spinner {
            margin-right: 10px;
            animation: spin 1s linear infinite;
        }

        img {
            user-select: none;
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
            -webkit-user-drag: none;
            -moz-user-drag: none;
            -ms-user-drag: none;
        }
        
        @keyframes spin {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        .jumping-text span {
            display: inline-block;
            animation: bounce 0.5s ease-in-out infinite alternate;
            font-size: 24px;
            font-family: 'Josefin Sans', sans-serif;
            color:black
        }

        @keyframes bounce {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        .jumping-text span:nth-child(2) {
            animation-delay: 0.1s;
        }

        .jumping-text span:nth-child(3) {
            animation-delay: 0.2s;
        }

        .jumping-text span:nth-child(4) {
            animation-delay: 0.3s;
        }

        .jumping-text span:nth-child(5) {
            animation-delay: 0.4s;
        }

        .jumping-text span:nth-child(6) {
            animation-delay: 0.5s;
        }

        .jumping-text span:nth-child(7) {
            animation-delay: 0.6s;
        }

        .jumping-text span:nth-child(8) {
            animation-delay: 0.7s;
        }

        .jumping-text span:nth-child(9) {
            animation-delay: 0.8s;
        }

        .jumping-text span:nth-child(10) {
            animation-delay: 0.9s;
        }
    </style>
    <script lang="js">
   document.addEventListener('readystatechange', function() {
    if (document.readyState !== "complete") {
        document.querySelector(".spinner-container").style.display = "flex";
        document.documentElement.style.overflowY = "hidden";
    } else {
        setTimeout(function() {
            document.querySelector(".spinner-container").style.display = "none";
            document.documentElement.style.overflowY = "scroll";
        }, 500); 
    }   
});
    // fail safe because some how something acts werid
    setTimeout(function() {
                document.querySelector(".spinner-container").style.display = "none";
    }, 3500); 

    window.addEventListener('error', function(event) {
        console.error("An error occurred:", event.message);
    });

</script>

