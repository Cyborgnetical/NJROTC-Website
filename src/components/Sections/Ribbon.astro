---
interface Props {
  rlink: string;
  namelink: string;
  numberR: string;
}
const { rlink, namelink, numberR } = Astro.props;
---

<div class="ribbon-option" id="ribbon-option">
  <img src={rlink} alt={numberR} />
  <label for={numberR}>{namelink}</label>
  <input type="checkbox" class="checkSwitch" id={numberR} name={numberR} />
</div>

<style>
  body * {
    color: black;
    text-align: center;
  }
  .ribbon-selection {
    display: flex;
    flex-wrap: wrap;
    margin: 0 -10px;
    width: 100%;
    margin: 0;
    height: 100vw;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;

    background-color: white;
  }
  .ribbon-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: calc(33.333% - 20px);
    margin: 10px;
    padding: 10px;
    background-color: #f2f2f2;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
  }
  .ribbon-option img {
    width: 100%;
    max-width: 100px;
    margin-bottom: 10px;
  }
  .ribbon-option button {
    font-size: 15px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 5px;
  }
  .ribbon-option:hover {
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
  }
  .ribbon-option input[type="checkbox"] {
    margin-bottom: 10px;
    display: none;
  }
</style>
