---
interface Props {
    image?:string;
    altTxt?:string;
    desc?:string;
    backgroundColor?:string;
    align?:string;
    imagePos?:string;
    
}

const { image, altTxt , desc , backgroundColor = "white", align = "center", imagePos = "50% 50%"} = Astro.props


---

<div>
    <img src={image} alt={altTxt} title={desc} decoding="async" loading="lazy">
    <span>
        <slot />
    </span>
</div>

<style define:vars={{align,backgroundColor,imagePos}}>
    div{
        display: flex; 
        box-sizing: border-box;
        justify-content: var(--align);
        align-items: center;
        position: relative;
        padding-inline: 5vw;
        height: 600px;
        background-color: var(--backgroundColor);
        border-block: 1px solid black;
    }
    div *{
        text-align:  center;
    }
    div > span{
        z-index: 1;
    }
    img{
        position: absolute;
        top: 0px;
        left: 0px;
        
        width: 100%;
        height: 100%;
        image-rendering: optimizeSpeed;
        object-fit: cover;
        object-position: var(--imagePos);

        z-index: 0;
    }
</style>

